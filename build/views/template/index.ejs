<div class="container">
    <div class="b-l">
        <div class="topic-wrapper">
            <div class="banner">
                <ul>
                    <% for(var i = 0; i < big.length; i ++) { %>
                        <li>
                            <a href="#video/:<%= big[i].id %>">
                                <img src="<%= big[i].src %>" alt="">
                                <p class="topic-title"><%= big[i].title %></p>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
    <div class="b-r">
        <div class="topic-list-wrapper">
            <ul class="topic-list">
                <% for(var i = 0; i < small.length; i ++) { %>
                    <li class="item">
                        <a href="#video/:<%= small[i].id %>">
                            <img src="<%= small[i].src %>" alt="">
                            <p class="topic-title"><%= small[i].title %></p>
                        </a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</div>
<div class="container block">
    <% for(var i = 0; i < total.length; i++) { %>
        <div class="block-wrapper">
            <div class="block-l">
                <ul>
                    <% if(total[i].header === "anime"){ %>
                    <li class="head">动画</li>
                    <% } else if(total[i].header === "music"){ %>
                    <li class="head">音乐</li>
                    <% } else if(total[i].header === "game"){ %>
                    <li class="head">游戏</li>
                    <% } else if(total[i].header === "ent"){ %>
                    <li class="head">娱乐</li>
                    <% } else if(total[i].header === "tech"){ %>
                    <li class="head">科技</li>
                    <% } else if(total[i].header === "movies"){ %>
                    <li class="head">影视</li>
                    <% } else if(total[i].header === "other"){ %>
                        <li class="head">其他</li>
                    <% } %>
                    <li class="info">
                        <a href="#">最新动态</a>
                    </li>
                    <!-- <li class="more">更多</li> -->
                </ul>
                <div class="block-body">
                    <ul class="v-list">
                        <% for(var j = 0; j < 10; j++) { %>
                            <li>
                                <a href="#video/:<%= total[i].content[j].id %>" class="v">
                                    <div class="v-img">
                                        <img src="<%= total[i].content[j].src %>" alt="">
                                    </div>
                                    <p class="t"><%= total[i].content[j].title %></p>
                                    <i>
                                        <span>
                                            <i class="play-icon"></i>
                                            <%= total[i].content[j].play %>
                                        </span>
                                        <span>
                                            <i class="cm-icon"></i>
                                            <%= total[i].content[j].comment %>
                                        </span>
                                    </i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
            <div class="block-r">
                <ul>
                    <li class="head">排行</li>
                </ul>
                <div class="b-body">

                    <ul>
                        <% for(var j = 0; j < 8; j++){ %>
                        <li>
                            <i><%= j+1 %></i>
                            <a href="#video/:<%= total[i].rank[j].id %>"><%= total[i].rank[j].title %></a>
                        </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    <% } %>

</div>
